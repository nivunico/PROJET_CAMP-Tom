<UserControl x:Class="PROJET_CAMP.components.Emplacement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PROJET_CAMP.components"
             mc:Ignorable="d"
             x:Name="root">
    <Button Name="EmplacementButton" Click="OnViewEmplacementClick" Height="{Binding Height, ElementName=root}" Width="{Binding Width, ElementName=root}">
        <TextBlock Name="TextBlock" Text="{Binding Uid, ElementName=root}"/>
        <Button.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform Angle="{Binding Angle, ElementName=root}"/>
                <TranslateTransform/>
            </TransformGroup>
        </Button.RenderTransform>
    </Button>
</UserControl>
