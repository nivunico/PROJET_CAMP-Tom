            <components:Emplacement HorizontalAlignment="Left" Margin="398,16,0,0" VerticalAlignment="Top" Width="40" Height="80" Uid="P5" ViewEmplacementClick="Emplacement_ViewEmplacementClick"/>
            <components:Emplacement HorizontalAlignment="Left" Margin="447,16,0,0" VerticalAlignment="Top" Width="40" Height="80" ViewEmplacementClick="Emplacement_ViewEmplacementClick"/>
            <components:Emplacement HorizontalAlignment="Left" Margin="447,16,0,0" VerticalAlignment="Top" Width="40" Height="80" Uid="P6" ViewEmplacementClick="Emplacement_ViewEmplacementClick"/>
            <components:Emplacement HorizontalAlignment="Left" Margin="497,110,0,0" VerticalAlignment="Top" Width="80" Height="40" Uid="P7" ViewEmplacementClick="Emplacement_ViewEmplacementClick"/>
            <components:Emplacement HorizontalAlignment="Left" Margin="497,155,0,0" VerticalAlignment="Top" Width="80" Height="40" Uid="P8" ViewEmplacementClick="Emplacement_ViewEmplacementClick"/>
